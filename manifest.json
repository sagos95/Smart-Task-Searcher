{
    "manifest_version": 3,
    "name": "Tasks Searcher Extension",
    "version": "0.1",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["https://*.kaiten.ru/*"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*.kaiten.ru/*"],
            "js": ["main.js"]
        }
    ]
}